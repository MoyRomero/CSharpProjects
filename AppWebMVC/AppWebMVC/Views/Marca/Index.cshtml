@using AppWebMVC.Models;
@model List<CMARCA>

@{
    ViewBag.Title = "MARCAS";
}

<main>
    <h2>MARCAS</h2>
    @using (Html.BeginForm("Index", "Marca",  FormMethod.Post))
    {
        <div class="ContenedorBusqueda BackGrounds">
            <label>BUSCAR (POR NOMBRE):</label>
            @Html.TextBox("NOMBRE")
            <input value="BUSCAR" type="submit" class="botonMoy boton" />
        </div>
    }


    <table>
        <thead>
            <tr>
                <td>@Html.LabelFor(p => Model[0].IDMarca)</td>
                <td>@Html.LabelFor(p => Model[0].NOMBRE)</td>
                <td>@Html.LabelFor(p => Model[0].DescripMarca)</td>
                <td>Editar</td>
                <td>Eliminar</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IDMarca</td>
                    <td>@item.NOMBRE</td>
                    <td>@item.DescripMarca</td>
                    <td>@Html.ActionLink(" ", "Editar", "Marca", new { id = item.IDMarca }, new { @class = "fa-solid fa-pen scaleIcon", @style = "color:#fffe" })</td>
                    <td><button class="fa-solid fa-trash scaleIcon transparent" onclick="EliminarPopUp(@item.IDMarca)" style="color:#fffe"></button></td>
                </tr>
            }
        </tbody>
    </table>

    @using (Html.BeginForm("Eliminar", "Marca", FormMethod.Post, new { @id = "frmEliminar" }))
    {@Html.Hidden("idElemento");
}

    <div class="BackGrounds CRUDContainer">
        @Html.ActionLink("AGREGAR DATOS", "Agregar", "Marca", null, new { @class = "botonMoy" })
        @Html.ActionLink("PDF", "GenerarPDF", "Marca", null, new { @target="AUTO_BLANK", @class = "botonMoy" })
        @Html.ActionLink("EXCEL", "GenerarExcelByte", "Marca", null, new { @target = "AUTO_BLANK", @class = "botonMoy" })
    </div>
</main>

